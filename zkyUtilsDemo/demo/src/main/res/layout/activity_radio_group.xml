<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zky.zkyutils.view.CustomRadioGroup
        android:id="@+id/crg_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/food_class_et_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:tag="1"
                android:text="早　餐"
                android:textColor="@drawable/food_eattime_textcolor_selector" />

            <RadioButton
                android:id="@+id/food_class_et_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:tag="2"
                android:text="早餐后"
                android:textColor="@drawable/food_eattime_textcolor_selector" />

            <RadioButton
                android:id="@+id/food_class_et_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:tag="3"
                android:text="午　餐"
                android:textColor="@drawable/food_eattime_textcolor_selector" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/food_class_et_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:tag="4"
                android:text="午餐后"
                android:textColor="@drawable/food_eattime_textcolor_selector" />

            <RadioButton
                android:id="@+id/food_class_et_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:tag="5"
                android:text="晚　餐"
                android:textColor="@drawable/food_eattime_textcolor_selector" />

            <RadioButton
                android:id="@+id/food_class_et_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:tag="6"
                android:text="晚餐后"
                android:textColor="@drawable/food_eattime_textcolor_selector" />
        </LinearLayout>
    </com.zky.zkyutils.view.CustomRadioGroup>

</LinearLayout>